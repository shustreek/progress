<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/CurrentWeather">

    <fragment
        android:id="@+id/CurrentWeather"
        android:name="com.amachikhin.testapplication.features.currentweather.presentation.CurrentWeatherFragment"
        android:label="@string/cw_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_CurrentWeather_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.amachikhin.testapplication.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_CurrentWeather"
            app:destination="@id/CurrentWeather" />
    </fragment>
</navigation>
